{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  // "include": ["src"],
  // "exclude": ["node_modules", "dist"]
}